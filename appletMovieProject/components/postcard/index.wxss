/* components/postcard/index.wxss */
.postitem {
position: relative;
}
.postitem{
  width: 100%;
  height: 200px;  
}
.postitem image {
  display: block;
  width: 100%;
  height: 100%;
  filter: brightness(0.6);

}
.postitem .info {
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: left;
  padding: 15px;
  color: white;

}