/* pages/vant/vant.wxss */

/* 导航内容 */

.van-nav-bar .van-nav-bar__title {
  width: 100%;
  max-width: 100%;
  padding: 0;
}

.van-tab--active {
  color: #fff !important;
}

.van-hairline--bottom {
  padding-top: 0 !important;
}

/* 顶部定位 */

.van-tabs--line .van-tabs__wrap {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

/* 导航本身 */

.van-tabs__nav {
  max-width: 60%;
  margin: 0 auto;
}

/* 导航左右图标 */

.van-nav-bar__left, .van-nav-bar__right {
  z-index: 9;
  color: #fff;
}

/* 导航盒子 */

.van-tabs .van-tabs__scroll {
  background: black;
}

/* 遮罩层 */

van-overlay .wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

/* 去除图片的内边距 */

van-grid .van-grid-item__content--square {
  padding: 0;
}

van-grid-item {
  position: relative;
}

van-grid-item image {
  filter: brightness(0.6);
}

/* 分类页面 */

.classifyBox {
  margin-top: 44px;
}

/* 分类文字 */

van-grid-item .classifyText {
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

van-grid-item .classifyText text {
  color: white;
  font-weight: bold;
}

/* 发现轮播图 */

.swiper {
  margin-top: 44px;
  width: 100%;
  height: 180px;
}

.swiper .swiperImg {
  width: 100%;
  height: 100%;
}

/* 搜索页面 */

.serchBox {
  box-sizing: border-box;
  padding-top: 44px;
  min-height: 100vh;
  background-color: #1a1a1a;
}

.van-search {
  background-color: #1a1a1a !important;
  color: red !important;
}

.van-search__content {
  background-color: #252525 !important;
}

.cell-index--van-cell__left-icon.van-icon.van-icon-search {
  color: #c8c9cc;
  font-size: 16px;
  font-weight: bold;
}

.van-field__body.van-field__body--search input {
  color: #fff;
}

/* 点击获取更多 */

.getmore {
  color: #969799;
  font-size: 14px;
}

/* 搜索框 */
.van-search{
  position: fixed;
  top: 44px;
  width: 100%;
  z-index: 99999999999;
}

/* 热门搜索和搜索记录  */

.searchText {
  margin-top: 44px;
  text-align: left;
  padding: 0 12px;
}

.searchText .hot{
  padding-top: 30px;
  white-space: normal;
  overflow: hidden;
}

.searchText  .hotTitle {
  font-size: 14px;
  color: #777;
}
.searchText .hotContent{
}
.searchText .hotItem {
  padding:0 10px;
  width: 50px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background: #252525;
  font-size: 12px;
  color: #fff;
   margin: 10px  10px 0 0;
  display: block;
  float: left;
}
