/* 最新音乐 */
.recommend .title{
  height: 16px;
  font-size: 16px;
  line-height: 16px;
  text-indent: 8px;
  font-size: #333333;
  font-weight: bold;
  border-left: 2px  solid #0097a7;
  margin: 20px 0 20px 1px;
}
.recommend .ul{
  padding-left:9px; 
  padding-right:9px; 
  
}
.recommend .ul .li{
  margin-bottom: 10px;
  position: relative;
  height: 50px;
  border-bottom: 1px solid #efeff0;
}
.recommend .ul .li .song{
  font-size: 15px;
  color: #333;
  height: 25px;
  line-height: 25px;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recommend .ul .li .singer{
  font-size: 12px;
  color: #888888;
  height: 25px;
  line-height: 25px;
    width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
.recommend .ul .li .play{
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -15px;
  width: 25px;
  height: 25px;
}
.loading{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.loadingIcon{
  width: 40px;
  height: 40px;
}
