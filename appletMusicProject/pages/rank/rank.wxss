/* pages/rank/rank.wxss */

/* 头部 */

.header {
  width: 100%;
  height: 150px;
  background-color: #000;
  position: relative;
}

.header image {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header .bg {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}

.header .content {
  color: #fff;
  position: absolute;
  z-index: 3;
  top: 20px;
  left: 20px;
}

.header .content .p {
  font-size: 14px;
  font-style: italic;
}

.header .content .h1 {
  font-size: 45px;
  font-weight: bold;
}

.header .content .date {
  font-size: 12px;
  margin-top: 5px;
}

/* 排行榜 */

.recommend .ul {
  padding-left: 40px;
}

.recommend .ul .li {
  text-indent: 5px;
  margin-bottom: 10px;
  position: relative;
  height: 50px;
  border-bottom: 1px solid #efeff0;
}

.recommend .ul .li .song {
  font-size: 15px;
  color: #333;
  height: 25px;
  line-height: 25px;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend .ul .li .singer {
  font-size: 12px;
  color: #888;
  height: 25px;
  line-height: 25px;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend .ul .li .play {
  position: absolute;
  top: 50%;
  right: 10px;
  margin-top: -15px;
  width: 25px;
  height: 25px;
}

/* 前三个标颜色 */

.recommend .ul .li:nth-child(-n+3) .rank {
  color: #009688;
}

.recommend .ul .li .rank {
  color: #999;
}

.rank {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -35px;
  font-size: 16px;
  font-weight: bold;
}
.loading{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.loadingIcon{
  width: 40px;
  height: 40px;
}
.more-song{
  height: 610px;
  overflow: hidden;
}
.getMore{
  text-align: center;
  height: 25px;
  line-height: 25px;
  font-size: 12px;
  color: gray;
}