/* pages/search/search.wxss */

/* 搜索 */

.search {
  height: 50px;
  padding: 10px;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 8;
  width: 100%;
  background: #fff;
  box-shadow: 0 1px 0 hsla(0, 0%, 40%, 0.1);
}

.search .searchBox {
  border: 1px solid #c5bebf;
  width: 100%;
  height: 28px;
  border-radius: 5px;
  position: relative;
  line-height: 26px;
}

.search .keyword {
  margin-top: 2.5px;
  font-size: 12px;
  margin-left: 25px;
}

.search .glass {
  position: absolute;
  top: 50%;
  left: 5px;
  margin-top: -9px;
  width: 18px;
  height: 18px;
}

/* 搜索音乐 */

.recommend {
  margin-top: 60px;
}

.recommend .title {
  height: 16px;
  font-size: 16px;
  line-height: 16px;
  text-indent: 8px;
  font-size: #333;
  font-weight: bold;
  border-left: 2px solid #0097a7;
  margin: 20px 0 20px 1px;
}

.recommend .ul {
  padding-left: 9px;
  padding-right: 9px;
}

.recommend .ul .li {
  margin-bottom: 10px;
  position: relative;
  height: 50px;
  border-bottom: 1px solid #efeff0;
}

.recommend .ul .li .song {
  font-size: 15px;
  color: #333;
  height: 25px;
  line-height: 25px;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend .ul .li .singer {
  font-size: 12px;
  color: #888;
  height: 25px;
  line-height: 25px;
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend .ul .li .play {
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -15px;
  width: 25px;
  height: 25px;
}

/* 隐藏 */

.hide {
  display: none;
}

/* 热门搜索 */

.hotSearch {
  padding-left: 10px;
  margin-top: 50px;
}

.hotSearch .title {
  color: #666;
  font-size: 12px;
  height: 40px;
  line-height: 40px;
}

.hotSearch .searchItem {
  display: inline-block;
  height: 32px;
  margin-right: 8px;
  margin-bottom: 8px;
  padding: 0 14px;
  font-size: 12px;
  line-height: 32px;
  color: #333;
  border: 1px solid #e9ebee;
  border-radius: 32px;
}

.loading{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.loadingIcon{
  width: 40px;
  height: 40px;
}
